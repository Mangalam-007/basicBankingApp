<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountHolderParentFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/accountHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Account holder - "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/beneficiaryHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Beneficiary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/transfer"/>
    <Button
        android:id="@+id/transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/beneficiaryHolder"
        app:layout_constraintLeft_toRightOf="@id/beneficiaryHolder"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Transfer"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>